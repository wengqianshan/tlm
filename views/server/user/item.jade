extends ../layout

block content
    .row
        .col-md-12
            .panel.panel-default
                .panel-heading
                    | 用户信息
                table.table.table-bordered
                    thead
                        tr
                            th ID
                            th 名称
                            th 用户名
                            th 角色
                            th 创建人
                            th Salt
                            th Hashed_password
                    tbody
                        tr
                            td #{user.id}
                            td #{user.name}
                            td #{user.username}
                            td
                                if (user.roles)
                                    - each role in user.roles
                                        span.label.label-info
                                            | #{role.name}
                                        | 
                            td
                                if (user.author)
                                    | #{user.author.username}
                                else
                                    | 无
                            td #{user.salt}
                            td #{user.hashed_password}

